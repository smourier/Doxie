<Window
    x:Class="Doxie.QueryWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Doxie"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:Doxie.Model"
    Title="Doxie Query"
    MinWidth="800"
    MinHeight="450"
    FocusManager.FocusedElement="{Binding ElementName=query}"
    FontFamily="Consolas"
    FontSize="12"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Margin="5"
            VerticalAlignment="Center"
            Text="Query:" />
        <TextBox
            x:Name="query"
            Grid.Column="1"
            Margin="5"
            VerticalAlignment="Center"
            Text="{Binding Query, UpdateSourceTrigger=PropertyChanged}" />

        <Grid
            x:Name="files"
            Grid.Row="1"
            Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Margin="5,5,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="16"
                Foreground="#E89644"
                Text="{Binding TotalHits, StringFormat={}{0} File(s) Hit}" />

            <ListView
                x:Name="filesList"
                Grid.Row="1"
                ItemsSource="{Binding Results}"
                SelectionChanged="OnFilesListSelectionChanged"
                SelectionMode="Single">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Height" Value="30" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate DataType="model:IndexSearchResultItem">
                        <Grid>
                            <TextBlock
                                VerticalAlignment="Center"
                                Text="{Binding RelativePath}"
                                ToolTip="{Binding Path}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <GridSplitter
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Height="1"
            HorizontalAlignment="Stretch"
            Background="#52432d" />

        <Grid
            x:Name="source"
            Grid.Row="3"
            Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Margin="5,5,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="16"
                Foreground="#E89644"
                Text="{Binding Item.Name, StringFormat={}\'{0}\' Source}" />

            <Wpf:WebView2
                x:Name="webView"
                Grid.Row="1"
                AllowDrop="False"
                AllowExternalDrop="False" />
        </Grid>

        <StatusBar
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Height="30"
            Padding="0"
            Background="#202020">
            <StatusBarItem HorizontalAlignment="Stretch">
                <TextBlock Foreground="White" Text="{Binding Item.Path}" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Foreground="White" Text="{Binding ModelLanguageName, StringFormat={}\'{0}\' detected language}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
