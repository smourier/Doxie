<Window
    x:Class="Doxie.QueryWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Doxie"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Doxie Query"
    MinWidth="800"
    MinHeight="450"
    FocusManager.FocusedElement="{Binding ElementName=query}"
    FontFamily="Consolas"
    FontSize="12"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Margin="5"
            VerticalAlignment="Center"
            Text="Query:" />
        <TextBox
            x:Name="query"
            Grid.Column="1"
            Margin="5"
            VerticalAlignment="Center"
            Text="{Binding Query, UpdateSourceTrigger=PropertyChanged}" />

        <Grid
            x:Name="files"
            Grid.Row="1"
            Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Margin="5,5,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="16"
                Foreground="#E89644"
                Text="{Binding TotalHits, StringFormat={}\'{0}\' Files Hit}" />

            <ListView
                x:Name="filesList"
                Grid.Row="1"
                ItemsSource="{Binding Files}"
                SelectionChanged="OnFilesListSelectionChanged"
                SelectionMode="Single">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Height" Value="30" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <TextBlock VerticalAlignment="Center" Text="{Binding}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Grid
            x:Name="source"
            Grid.Row="2"
            Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Margin="5,5,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="16"
                Foreground="#E89644"
                Text="Source" />

            <Wpf:WebView2
                x:Name="webView"
                Grid.Row="1"
                AllowDrop="False"
                AllowExternalDrop="False" />
        </Grid>
    </Grid>
</Window>
