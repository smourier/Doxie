<Window
    x:Class="Doxie.QueryWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Doxie"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:Doxie.Model"
    Title="Doxie Query"
    MinWidth="800"
    MinHeight="450"
    FocusManager.FocusedElement="{Binding ElementName=query}"
    FontFamily="Consolas"
    FontSize="12"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Margin="5"
            VerticalAlignment="Center"
            Text="Query:" />
        <Grid Grid.Column="1">
            <TextBox
                x:Name="query"
                Margin="5"
                VerticalAlignment="Center"
                Text="{Binding Query, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Foreground="DarkGray"
                IsHitTestVisible="False"
                Text="Enter Search Term Here. Search Internet for Apache Lucene Query Parser Syntax for advanced queries.">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=query}" Value="">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
        <Grid
            x:Name="files"
            Grid.Row="1"
            Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Margin="5,5,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="16"
                Foreground="#E89644"
                Text="{Binding TotalHits, StringFormat={}{0} File(s) Hit}" />

            <ListView
                x:Name="filesList"
                Grid.Row="1"
                ItemsSource="{Binding Results}"
                SelectionChanged="OnFilesListSelectionChanged"
                SelectionMode="Single">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Height" Value="30" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate DataType="model:IndexSearchResultItem">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                VerticalAlignment="Center"
                                Text="{Binding RelativePath}"
                                ToolTip="{Binding Path}" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="5,0,5,0"
                                VerticalAlignment="Center"
                                Text="{Binding LinesCount, StringFormat={}{0} lines}" />
                            <Grid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Click="OpenInExplorer_Click" Header="Open in Explorer..." />
                                </ContextMenu>
                            </Grid.ContextMenu>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <GridSplitter
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Height="1"
            HorizontalAlignment="Stretch"
            Background="#52432d" />

        <Grid
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Visibility="{Binding IsSourceVisible, Converter={StaticResource BoolToVis}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Margin="5" Orientation="Horizontal">
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Foreground="#E89644"
                    Text="{Binding Item.Name, StringFormat={}\'{0}\' Source}" />
                <Button
                    x:Name="nextHit"
                    Margin="5,0,0,0"
                    Click="NextHit_Click">
                    Next Hit
                </Button>
                <Button
                    x:Name="previousHit"
                    Margin="5,0,0,0"
                    Click="PreviousHit_Click">
                    Previous Hit
                </Button>
            </StackPanel>

            <Wpf:WebView2
                x:Name="webView"
                Grid.Row="1"
                AllowDrop="False"
                AllowExternalDrop="False" />
        </Grid>

        <StatusBar
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Height="30"
            Padding="0"
            Background="#202020">
            <StatusBarItem
                HorizontalAlignment="Stretch"
                Background="Red"
                Visibility="{Binding QueryHasError, Converter={StaticResource BoolToVis}}">
                <TextBlock
                    Foreground="White"
                    Text="{Binding ErrorMessage}"
                    ToolTip="{Binding ErrorMessage}" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Stretch">
                <TextBlock Foreground="White" Text="{Binding Item.Path}" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem HorizontalAlignment="Stretch">
                <TextBlock Foreground="White" Text="{Binding DetectedEncoding.WebName, StringFormat={}\'{0}\' detected encoding}" />
            </StatusBarItem>
            <Separator Visibility="{Binding IsHitsVisible, Converter={StaticResource BoolToVis}}" />
            <StatusBarItem HorizontalAlignment="Right" Visibility="{Binding IsHitsVisible, Converter={StaticResource BoolToVis}}">
                <TextBlock Foreground="White" Text="{Binding HitsCount, StringFormat={}{0} hit(s)}" />
            </StatusBarItem>
            <Separator Visibility="{Binding IsLinesCountVisible, Converter={StaticResource BoolToVis}}" />
            <StatusBarItem HorizontalAlignment="Right" Visibility="{Binding IsLinesCountVisible, Converter={StaticResource BoolToVis}}">
                <TextBlock Foreground="White" Text="{Binding LinesCount, StringFormat={}{0} line(s)}" />
            </StatusBarItem>
            <Separator Visibility="{Binding IsDetectedLanguageVisible, Converter={StaticResource BoolToVis}}" />
            <StatusBarItem HorizontalAlignment="Right" Visibility="{Binding IsDetectedLanguageVisible, Converter={StaticResource BoolToVis}}">
                <TextBlock Foreground="White" Text="{Binding ModelLanguageName, StringFormat={}\'{0}\' detected language}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
