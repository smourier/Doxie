<Application
    x:Class="Doxie.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Doxie"
    xmlns:s="clr-namespace:System;assembly=mscorlib"
    xmlns:utilities="clr-namespace:Doxie.Utilities"
    StartupUri="MainWindow.xaml"
    ThemeMode="Dark">
    <Application.Resources>

        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <utilities:CountToBooleanConverter x:Key="CountToBooleanConverter" />
        <utilities:StringJoinConverter x:Key="StringJoinConverter" />
        <utilities:CountConverter x:Key="CountConverter" />
        <SolidColorBrush x:Key="ListViewItemPillFillBrush" Color="#784424" />
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#784424" />
        <!--<SolidColorBrush x:Key="ControlElevationBorderBrush" Color="White" />-->
        <CornerRadius x:Key="ControlCornerRadius">5</CornerRadius>
        <SolidColorBrush x:Key="ButtonBackground" Color="#ebab34" />
        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#ebbd34" />

    </Application.Resources>
</Application>
