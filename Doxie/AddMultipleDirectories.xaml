<Window
    x:Class="Doxie.AddMultipleDirectories"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Doxie"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Choose directories to index"
    Width="500"
    Height="600"
    FontFamily="Consolas"
    FontSize="12"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterOwner"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListView x:Name="list" Grid.ColumnSpan="4">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Text="{Binding Name}" />
                        <CheckBox
                            x:Name="choose"
                            Grid.Column="2"
                            Margin="5,0,0,0"
                            IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Border
            Grid.Row="1"
            Grid.ColumnSpan="4"
            Background="#52432d" />

        <TextBlock
            Grid.Row="2"
            Margin="5"
            VerticalAlignment="Center"
            Text="{Binding SelectedCount, StringFormat={}{0} selected directorie(s)}" />

        <Button
            x:Name="clearAll"
            Grid.Row="2"
            Grid.Column="1"
            Margin="5"
            Click="ClearAll_Click">
            Clear all
        </Button>

        <Button
            x:Name="ok"
            Grid.Row="2"
            Grid.Column="2"
            Width="70"
            Margin="5"
            Click="Ok_Click"
            IsDefault="True">
            OK
        </Button>
        <Button
            x:Name="cancel"
            Grid.Row="2"
            Grid.Column="3"
            Width="70"
            Margin="5,5,15,5"
            Click="Cancel_Click">
            Cancel
        </Button>
    </Grid>
</Window>
