<Window
    x:Class="Doxie.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Doxie"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:Doxie.Model"
    Title="Doxie"
    Width="1000"
    Height="800"
    FontFamily="Consolas"
    FontSize="12"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CornerRadius="4"
            NonClientFrameEdges="None"
            ResizeBorderThickness="5"
            UseAeroCaptionButtons="True" />
    </WindowChrome.WindowChrome>
    <Window.Template>
        <ControlTemplate TargetType="{x:Type Window}">
            <Grid>
                <Border
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="5,30,5,5">
                    <AdornerDecorator>
                        <ContentPresenter />
                    </AdornerDecorator>
                </Border>
                <Grid Height="30" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Image
                        Grid.Column="0"
                        Width="24"
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Source="pack://application:,,,/Doxie;component/Resources/Doxie.png" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="White"
                        Text="{TemplateBinding Title}" />
                    <Menu
                        x:Name="mainMenu"
                        Grid.Column="2"
                        Margin="10,-6,0,0"
                        IsMainMenu="True"
                        WindowChrome.IsHitTestVisibleInChrome="True">
                        <MenuItem
                            x:Name="fileMenu"
                            Height="44"
                            Header="_File"
                            SubmenuOpened="OnFileOpened">
                            <MenuItem
                                x:Name="openIndex"
                                Click="OpenIndex_Click"
                                Header="Open or create an index..." />
                            <MenuItem
                                x:Name="openRecent"
                                Click="OpenRecent_Click"
                                Header="Open recent..."
                                ItemsSource="{Binding RecentFiles}">
                                <MenuItem.Resources>
                                    <DataTemplate DataType="{x:Type local:RecentFile}">
                                        <TextBlock Text="{Binding}" />
                                    </DataTemplate>
                                    <DataTemplate DataType="{x:Type local:RecentFileSeparator}">
                                        <Separator />
                                    </DataTemplate>
                                    <DataTemplate DataType="{x:Type local:ClearRecentFiles}">
                                        <TextBlock Text="Clear Recent Files" />
                                    </DataTemplate>
                                </MenuItem.Resources>
                            </MenuItem>
                            <Separator />
                            <MenuItem Click="OnExitClick" Header="E_xit" />
                        </MenuItem>
                        <MenuItem
                            x:Name="helpMenu"
                            Height="44"
                            Header="_Help">
                            <MenuItem Click="OnAboutClick" Header="_About Doxie..." />
                        </MenuItem>
                    </Menu>
                </Grid>
            </Grid>
        </ControlTemplate>
    </Window.Template>
    <Grid x:Name="grid" Visibility="Hidden">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid x:Name="index">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Margin="5,5,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="16"
                Foreground="#E89644"
                Text="Index" />
        </Grid>

        <GridSplitter
            Grid.Row="1"
            Height="1"
            VerticalAlignment="Center"
            Background="#FFE0E0E0" />

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Margin="5,5,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="16"
                Foreground="#E89644"
                Text="Directories in index" />

            <ListView
                x:Name="directories"
                Grid.Row="1"
                ItemsSource="{Binding Index.Directories}"
                SelectionChanged="OnDirectoriesSelectionChanged"
                SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate DataType="{x:Type model:IndexDirectory}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center" Text="{Binding Path}" />
                            <Button Grid.Column="1">Delete</Button>
                            <Button Grid.Column="2">Rescan</Button>
                            <Button Grid.Column="3">Remap...</Button>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <GridSplitter
            Grid.Row="3"
            Height="1"
            VerticalAlignment="Center"
            Background="#FFE0E0E0" />

        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Margin="5,5,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="16"
                Foreground="#E89644"
                Text="Directory batches" />

            <DataGrid
                x:Name="batches"
                Grid.Row="1"
                AutoGenerateColumns="False"
                ItemsSource="{Binding CurrentDirectory.OrderedBatches}"
                Visibility="Collapsed">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#E89644" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="BorderBrush" Value="#784424" />
                        <Setter Property="BorderThickness" Value="1" />
                        <Setter Property="Padding" Value="4" />
                        <Setter Property="ContentTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <TextBlock
                                        MaxWidth="100"
                                        Text="{Binding}"
                                        TextWrapping="Wrap" />
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding StartTime}" Header="Start time" />
                    <DataGridTextColumn Binding="{Binding EndTime}" Header="End time" />
                    <DataGridTextColumn Binding="{Binding NumberOfDocuments}" Header="Number of documents" />
                    <DataGridTextColumn Binding="{Binding NumberOfSkippedFiles}" Header="Number of skipped files" />
                    <DataGridTextColumn Binding="{Binding NumberOfSkippedDirectories}" Header="Number of skipped directories" />
                    <DataGridTextColumn Binding="{Binding ProcessedFilesPerSecond}" Header="Processed files/s" />
                    <DataGridTemplateColumn Header="Included file extensions">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button>Edit</Button>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        Text="{Binding IncludedFileExtensions, Converter={StaticResource CountConverter}}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Non-Indexed file extensions">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button>View</Button>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        Text="{Binding NonIndexedFileExtensions, Converter={StaticResource CountConverter}}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Excluded directory names">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button>View</Button>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        Text="{Binding ExcludedDirectoryNames, Converter={StaticResource CountConverter}}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>

        <StatusBar
            Grid.Row="5"
            Height="30"
            Padding="0"
            Background="#202020">
            <StatusBarItem>
                <TextBlock Foreground="White" Text="{Binding Index.FilePath}" />
            </StatusBarItem>
            <StatusBarItem
                x:Name="statusProgress"
                HorizontalContentAlignment="Right"
                Visibility="Hidden">
                <Grid>
                    <ProgressBar
                        Width="90"
                        Height="16"
                        Background="#202020"
                        Foreground="#E89644"
                        IsIndeterminate="True"
                        Value="50" />
                    <TextBlock
                        Name="statusProgressText"
                        HorizontalAlignment="Center"
                        Foreground="White"
                        Text="..." />
                </Grid>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
