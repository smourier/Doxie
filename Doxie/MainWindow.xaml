<Window
    x:Class="Doxie.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Doxie"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Doxie"
    Width="1000"
    Height="800"
    FontFamily="Consolas"
    FontSize="12"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="44"
            CornerRadius="4"
            NonClientFrameEdges="None"
            ResizeBorderThickness="5"
            UseAeroCaptionButtons="True" />
    </WindowChrome.WindowChrome>
    <Window.Template>
        <ControlTemplate TargetType="{x:Type Window}">
            <Grid>
                <Border
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="5,30,5,5">
                    <AdornerDecorator>
                        <ContentPresenter />
                    </AdornerDecorator>
                </Border>
                <Grid Height="30" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Image
                        Grid.Column="0"
                        Width="24"
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Source="pack://application:,,,/Doxie;component/Resources/Doxie.png" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="White"
                        Text="{TemplateBinding Title}" />
                    <Menu
                        x:Name="mainMenu"
                        Grid.Column="2"
                        Margin="10,-6,0,0"
                        IsMainMenu="True"
                        WindowChrome.IsHitTestVisibleInChrome="True">
                        <MenuItem
                            x:Name="fileMenu"
                            Height="44"
                            Header="_File"
                            SubmenuOpened="OnFileOpened">
                            <MenuItem
                                x:Name="createNewIndex"
                                Click="CreateNewIndex_Click"
                                Header="Create a new index..." />
                            <MenuItem
                                x:Name="addExistingIndex"
                                Click="AddExistingIndex_Click"
                                Header="Add an existing index..." />
                            <!--<MenuItem Click="OnPreferences" Header="_Preferences..." />-->
                            <Separator />
                            <MenuItem Click="OnExitClick" Header="E_xit" />
                        </MenuItem>
                        <MenuItem
                            x:Name="viewMenu"
                            Height="44"
                            Header="_View">
                            <MenuItem Click="OnRefresh" Header="_Refresh" />
                        </MenuItem>
                        <MenuItem
                            x:Name="helpMenu"
                            Height="44"
                            Header="_Help">
                            <!--<MenuItem Click="OnOpenConfig" Header="_Open Configuration File" />
                            <MenuItem Click="OnOpenConfigFolder" Header="_Open Configuration Folder" />
                            <Separator />-->
                            <MenuItem Click="OnAboutClick" Header="_About Doxie..." />
                        </MenuItem>
                    </Menu>
                </Grid>
            </Grid>
        </ControlTemplate>
    </Window.Template>
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TreeView x:Name="indexes" Grid.ColumnSpan="2" />
        <GridSplitter
            Grid.Column="2"
            Width="1"
            HorizontalAlignment="Center"
            Background="#FFE0E0E0" />
        <StackPanel
            x:Name="HostPanel"
            Grid.Column="3"
            Margin="0,4,0,4" />
    </Grid>
</Window>
