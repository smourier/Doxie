<Window
    x:Class="Doxie.ListWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Doxie"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="List"
    Width="400"
    Height="600"
    FontFamily="Consolas"
    FontSize="12"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterOwner"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListView x:Name="list">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Text="{Binding Name}" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{Binding Description}"
                            Visibility="{Binding IsDescriptionVisible, Converter={StaticResource BoolToVis}}" />
                        <Button
                            x:Name="action"
                            Grid.Column="2"
                            Margin="5,0,0,0"
                            Click="Action_Click"
                            Content="{Binding ButtonText}"
                            Visibility="{Binding ShowButton, Converter={StaticResource BoolToVis}}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel
            Grid.Row="1"
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Orientation="Horizontal"
            Visibility="{Binding IsSortPanelEnabled, Converter={StaticResource BoolToVis}}">
            <Button
                x:Name="sortByName"
                Click="SortByName_Click"
                Content="{Binding SortByNameButtonText}"
                Visibility="{Binding IsSortByNameButtonVisible, Converter={StaticResource BoolToVis}}" />
            <Button
                x:Name="sortByDescription"
                Click="SortByDescription_Click"
                Content="{Binding SortByDescriptionButtonText}"
                Visibility="{Binding IsSortByDescriptionButtonVisible, Converter={StaticResource BoolToVis}}" />
        </StackPanel>
    </Grid>
</Window>
