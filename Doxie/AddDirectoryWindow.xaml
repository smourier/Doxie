<Window
    x:Class="Doxie.AddDirectoryWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Doxie"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Add Excluded Directory Name"
    Width="300"
    Height="150"
    MinWidth="300"
    MinHeight="150"
    FocusManager.FocusedElement="{Binding ElementName=directoryName}"
    FontFamily="Consolas"
    FontSize="12"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterOwner"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Margin="10"
            VerticalAlignment="Center"
            Text="Name" />
        <TextBox
            x:Name="directoryName"
            Grid.ColumnSpan="3"
            Height="30"
            Margin="50,0,15,0"
            MaxLines="1"
            Text="{Binding DirectoryName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            TextChanged="DirectoryName_TextChanged" />

        <Button
            x:Name="ok"
            Grid.Row="1"
            Grid.Column="1"
            Width="70"
            Margin="5"
            Click="Ok_Click"
            IsDefault="True">
            OK
        </Button>
        <Button
            x:Name="cancel"
            Grid.Row="1"
            Grid.Column="2"
            Width="70"
            Margin="5,5,15,5"
            Click="Cancel_Click">
            Cancel
        </Button>
    </Grid>
</Window>
